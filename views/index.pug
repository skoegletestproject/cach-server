doctype html
html
  head
    title Cache Manager (WebSockets)
    script(src="/script.js") // Include WebSocket client
    style.
      body { font-family: Arial, sans-serif; text-align: center; padding: 20px; }
      table { width: 50%; margin: auto; border-collapse: collapse; }
      th, td { border: 1px solid black; padding: 10px; text-align: left; }
      button { margin: 5px; padding: 5px 10px; cursor: pointer; }

  body
    h1 Cache Manager (WebSockets)

    form(action="/set" method="post" id="addCacheForm")
      input(type="text" id="key" name="key" placeholder="Enter Key" required)
      input(type="text" id="value" name="value" placeholder="Enter Value" required)
      button(type="submit") Add to Cache

    table(id="cacheTable")
      tr
        th Key
        th Value
        th Action
      tbody(id="cacheBody") // Cache data will be inserted here dynamically

    form(action="/clear" method="post" id="clearCacheForm")
